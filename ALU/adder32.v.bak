module adder32 (a, b, cin, sum, cout);
	input [31:0] a, b;
	input cin;
	output [31:0] cout;
	output sum; 
	wire [31:0] C;
	
	fulladder FirstFullAdder0 (a[0], b[0], cin[0], sum[0], C(0));

	genvar i; 
	generate 
		for (i = 0; i < 32; i = i + 1)
		begin: fulladd_stage 
			fulladder FullAdder32 ( 
				.a(a[i]),
				.b(b[i]),
				.cin(C[i-1]),
				.sum(sum[i]),
				.cout(C[i])
			);
		end
	endgenerate

endmodule
	